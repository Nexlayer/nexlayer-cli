{
  "openapi": "3.0.0",
  "info": {
    "title": "Nexlayer API",
    "description": "API for the Nexlayer Application",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://app.staging.nexlayer.io"
    }
  ],
  "paths": {
    "/startUserDeployment/{applicationID?}": {
      "post": {
        "summary": "Start User Deployment",
        "description": "Start a deployment given an application ID. Accepts a YAML file uploaded using `--data-binary`.",
        "parameters": [
          {
            "name": "applicationID?",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/startUserDeploymentResponse"
                }
              }
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "text/x-yaml": {
              "schema": {
                "$ref": "#/components/schemas/startUserDeploymentRequestBody"
              }
            }
          }
        }
      }
    },
    "/feedback": {
      "post": {
        "summary": "Send Feedback",
        "description": "Send feedback to Nexlayer",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/feedback"
              }
            }
          }
        }
      }
    },
    "/saveCustomDomain/{applicationID}": {
      "post": {
        "summary": "Save Custom Domain",
        "description": "Save a custom domain to user profile",
        "parameters": [
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/saveCustomDomainResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/saveCustomDomainRequestBody"
              }
            }
          }
        }
      }
    },
    "/getDeployments/{applicationID}": {
      "get": {
        "summary": "Get Deployments",
        "description": "Get all user deployments",
        "parameters": [
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getDeploymentsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/getDeploymentInfo/{namespace}/{applicationID}": {
      "get": {
        "summary": "Get Deployment Info",
        "description": "Get information around a specific deployment",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getDeploymentInfoResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "getDeploymentsResponse": {
        "type": "object",
        "properties": {
          "deployments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "namespace": {
                  "type": "string",
                  "example": "ecstatic-frog"
                },
                "templateID": {
                  "type": "string",
                  "example": "0001"
                },
                "templateName": {
                  "type": "string",
                  "example": "K-d chat"
                },
                "deploymentStatus": {
                  "type": "string",
                  "example": "running"
                }
              }
            }
          }
        },
        "required": [
          "deployments"
        ]
      },
      "getDeploymentInfoResponse": {
        "type": "object",
        "properties": {
          "deployment": {
            "type": "object",
            "properties": {
              "namespace": {
                "type": "string",
                "example": "ecstatic-frog"
              },
              "templateID": {
                "type": "string",
                "example": "0001"
              },
              "templateName": {
                "type": "string",
                "example": "K-d chat"
              },
              "deploymentStatus": {
                "type": "string",
                "example": "running"
              }
            }
          }
        },
        "required": [
          "deployment"
        ]
      },
      "startTemplateDeploymentResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Deployment started successfully"
          },
          "namespace": {
            "type": "string",
            "example": "ecstatic-frog"
          },
          "url": {
            "type": "string",
            "example": "https://ecstatic-frog-kd-chat.alpha.nexlayer.ai"
          }
        },
        "required": [
          "message",
          "namespace",
          "url"
        ]
      },
      "checkSiteStatusResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "UP"
          }
        },
        "required": [
          "message"
        ]
      },
      "startUserDeploymentResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Deployment started successfully"
          },
          "namespace": {
            "type": "string",
            "example": "fantastic-fox"
          },
          "url": {
            "type": "string",
            "example": "https://fantastic-fox-my-mern-app.alpha.nexlayer.io"
          }
        },
        "required": [
          "message",
          "namespace",
          "url"
        ]
      },
      "saveCustomDomainRequestBody": {
        "type": "object",
        "properties": {
          "domain": {
            "type": "string",
            "example": "mydomain.com"
          }
        },
        "required": [
          "domain"
        ]
      },
      "saveCustomDomainResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Custom domain saved successfully"
          }
        },
        "required": [
          "message"
        ]
      },
      "feedback": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "example": "Sample text"
          }
        },
        "required": [
          "text"
        ]
      },
      "startUserDeploymentRequestBody": {
        "type": "string",
        "format": "binary"
      }
    }
  },
  "x-llm_details": {
    "summary": "This API is designed for managing Nexlayer deployments and user feedback. It includes endpoints for starting deployments (with YAML payloads), sending feedback, saving custom domains, and retrieving deployment information.",
    "endpoints": [
      {
        "path": "/startUserDeployment/{applicationID?}",
        "method": "POST",
        "summary": "Start User Deployment",
        "description": "Starts a deployment for a given application ID using a YAML file payload.",
        "parameters": [
          {
            "name": "applicationID?",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "required": true,
          "contentType": "text/x-yaml",
          "schemaRef": "#/components/schemas/startUserDeploymentRequestBody"
        },
        "responses": {
          "200": {
            "description": "OK",
            "contentType": "application/json",
            "schemaRef": "#/components/schemas/startUserDeploymentResponse"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      {
        "path": "/feedback",
        "method": "POST",
        "summary": "Send Feedback",
        "description": "Sends user feedback to Nexlayer.",
        "requestBody": {
          "required": true,
          "contentType": "application/json",
          "schemaRef": "#/components/schemas/feedback"
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      {
        "path": "/saveCustomDomain/{applicationID}",
        "method": "POST",
        "summary": "Save Custom Domain",
        "description": "Associates a custom domain with a user profile.",
        "parameters": [
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "required": true,
          "contentType": "application/json",
          "schemaRef": "#/components/schemas/saveCustomDomainRequestBody"
        },
        "responses": {
          "200": {
            "description": "OK",
            "contentType": "application/json",
            "schemaRef": "#/components/schemas/saveCustomDomainResponse"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      {
        "path": "/getDeployments/{applicationID}",
        "method": "GET",
        "summary": "Get Deployments",
        "description": "Retrieves all deployments for a given application ID.",
        "parameters": [
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "contentType": "application/json",
            "schemaRef": "#/components/schemas/getDeploymentsResponse"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      {
        "path": "/getDeploymentInfo/{namespace}/{applicationID}",
        "method": "GET",
        "summary": "Get Deployment Info",
        "description": "Provides detailed information for a specific deployment using namespace and application ID.",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "applicationID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "contentType": "application/json",
            "schemaRef": "#/components/schemas/getDeploymentInfoResponse"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    ],
    "schemas_info": {
      "getDeploymentsResponse": "Object containing an array of deployments with details such as namespace, templateID, templateName, and deploymentStatus.",
      "getDeploymentInfoResponse": "Object containing deployment details for a specific deployment.",
      "startTemplateDeploymentResponse": "Object with message, namespace, and URL indicating a successful deployment start.",
      "checkSiteStatusResponse": "Object with a message indicating the current status (e.g., 'UP').",
      "startUserDeploymentResponse": "Object with message, namespace, and URL for a user deployment.",
      "saveCustomDomainRequestBody": "Object containing the domain string to be saved.",
      "saveCustomDomainResponse": "Object with a message confirming the custom domain has been saved.",
      "feedback": "Object containing a text field for user feedback.",
      "startUserDeploymentRequestBody": "Binary string representing the YAML file used to start a user deployment."
    }
  }
}
